              <h3 class="page-title">{{ report.title }}</h3>
              <div class="page-url">{{ report.url }}</div>
              <div class="last-scanned">Last scanned: {{ report.last_scanned|date('M j, Y g:i A') }}</div>
            </div>
            
            <div class="report-summary-cards">
              <div class="summary-mini-card total">
                <div class="mini-count">{{ report.total_violations }}</div>
                <div class="mini-label">Total</div>
              </div>
              {% if report.critical_count > 0 %}
                <div class="summary-mini-card critical">
                  <div class="mini-count">{{ report.critical_count }}</div>
                  <div class="mini-label">Critical</div>
                </div>
              {% endif %}
              {% if report.serious_count > 0 %}
                <div class="summary-mini-card serious">
                  <div class="mini-count">{{ report.serious_count }}</div>
                  <div class="mini-label">Serious</div>
                </div>
              {% endif %}
              {% if report.moderate_count > 0 %}
                <div class="summary-mini-card moderate">
                  <div class="mini-count">{{ report.moderate_count }}</div>
                  <div class="mini-label">Moderate</div>
                </div>
              {% endif %}
            </div>
            
            <div class="view-report-arrow">View Report â†’</div>
          </a>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <div class="no-reports">
