}

.violation-item.moderate .violation-count {
  background: #d69e2e;
  color: white;
}

.violation-item.moderate .violation-count:hover {
  background: #b7791f;
}

.violation-item.minor .violation-count {
  background: #38a169;
}

.violation-item.minor .violation-count:hover {
  background: #2f855a;
}

.no-reports {
  text-align: center;
  padding: 3rem;
  color: #718096;
}

.no-reports h3 {
  color: #4a5568;
  margin-bottom: 1rem;
}
</style>
